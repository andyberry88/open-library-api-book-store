{
    "root": true,
    "parser": "babel-eslint",
    "extends": [
        "airbnb-base"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "indent": ["error", 4],
        "max-len": ["error", {
            "code": 120,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true
        }],
        "class-methods-use-this": 0,
        "arrow-body-style": [
            2,
            "as-needed"
        ],
        "arrow-parens": [
            "error",
            "always"
        ],
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "strict": 0,
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-underscore-dangle": 0,
        "import/no-named-as-default": 0,
        "quotes": [
            2,
            "single"
        ]
    }
}
